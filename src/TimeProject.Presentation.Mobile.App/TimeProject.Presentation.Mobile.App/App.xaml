<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TimeProject.Presentation.Mobile.App.App">
    <Application.Resources>
        <ResourceDictionary>

            <Color x:Key="ColorPrimary">#7D6AF2</Color>
            <SolidColorBrush x:Key="SolidColorPrimary" Color="{StaticResource Key=ColorPrimary}"></SolidColorBrush>
            
            
            <Style TargetType="Label"  ApplyToDerivedTypes="True">
                <Setter Property="FontFamily" Value="RobotoBlack"></Setter>
                <Setter Property="TextColor" Value="Black"></Setter>
            </Style>

            <Style x:Key="AppLabel" TargetType="Label" >
                <Setter Property="FontSize" Value="Small"></Setter>
            </Style>
        </ResourceDictionary>
            
    </Application.Resources>
</Application>